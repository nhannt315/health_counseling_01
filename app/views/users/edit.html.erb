<% provide :title, t(".title")%>
<main>
  <div class="container margin_60">
    <div class="row">
      <aside class="col-xl-4 col-lg-4" id="sidebar">
        <div class="box_general_3 mf_user_profile">
          <div class="title">
            <div class="avatar_wrap">
              <%= image_tag user_avatar(current_user), class: "avatar" %>
            </div>
            <div class="user_info">
              <h3><%= @user.name %></h3>
              <small><%= @user.email %></small>
              <ul class="statistic">
                <li><%= @user.questions.count %> <%= t ".questions" %></li>
                <li><%= @user.answers.count %> <%= t ".comments" %></li>
              </ul>
            </div>
          </div>
          <ul class="treatments clearfix">
            <li><%= link_to t(".account_info"), @user %></li>
            <li><%= link_to t(".change_password"), "#" %></li>
          </ul>
        </div>
      </aside>
      <div class="col-xl-8 col-lg-8">
        <nav id="secondary_nav">
          <div class="container">
            <h4 class="edit_account_title">
              <i class="icon-edit-alt"></i> <%= t ".title" %>
            </h4>
          </div>
        </nav>
        <div class="box_general_3">
          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.label :name, t(".name") %>
              <%= f.text_field :name, class: "form-control",
                placeholder: t(".your_name") %>
            </div>
            <div class="form-group">
              <%= f.label :email, t(".email") %>
              <%= f.email_field :email, class: "form-control",
                placeholder: t(".your_email") %>
            </div>
            <div class="form-group">
              <%= f.label :password, t(".password") %>
              <%= f.password_field :password, class: "form-control",
                placeholder: t(".your_password") %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, t(".password_confirm") %>
              <%= f.password_field :password_confirmation,
                class: "form-control",
                placeholder: t(".password_confirm") %>
            </div>
            <div class="row">
              <div class="col-md-4 col-sm-4">
                <label for="user_avatar">
                  <%= image_tag user_avatar(current_user),
                  class: "img_edit_avatar"%>
                  <span class="file-name"></span>
                </label>
                <%= f.file_field :avatar,
                  accept: "image/jpeg,image/gif,image/png",
                  class: "user_avatar" %>
              </div>
              <div class="col-md-8 col-sm-8">
                <div class="form-group">
                  <%= f.label :bio, t(".bio") %>
                  <%= f.text_area :bio,
                    class: "form-control",
                    placeholder: t(".bio_placeholder"),
                    rows: "5" %>
                </div>
              </div>
            </div>
            <div class="form-group text-center add_top_30">
              <%= f.submit t(".submit"), class: "btn_1" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</main>
